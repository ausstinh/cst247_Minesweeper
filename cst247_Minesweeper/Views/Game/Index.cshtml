@if (Session["user_id"] != null)
{

    {
        ViewBag.Title = "Difficulty Selector";
    }

    <h2>New Game | Select Difficulty</h2>

    using (Html.BeginForm("SetDifficulty", "Game", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <p>Please select a difficulty:</p>
                <input type="radio" name="size" value="0">Easy<br>
                <input type="radio" name="size" value="1">Medium<br>
                <input type="radio" name="size" value="2">Hard<br>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Continue" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <h2>You must be logged in to view this page</h2>
    <div class="form-group">
        <input type="button" value="Log In" class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Index", "Account") + "'");" />
    </div>
}